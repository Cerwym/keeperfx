      }
    },
    {
      "id": "btn_campaign_2",
      "type": "NormalBtn",
      "position": {
        "x": 120,
        "y": 130
      },
      "size": {
        "width": 400,
        "height": 32
      },
      "visual": {
        "draw_callback": "draw_campaign_button"
      },
      "text": {
        "dynamic": true,
        "lua_getter": "get_campaign_name(1)"
      },
      "state": {
        "enabled": true,
        "visible": true
      },
      "callbacks": {
        "on_click": {
          "type": "lua",
          "script": "on_campaign_click(1)"
        }
      },
      "data": {
        "campaign_index": 1
      }
    },
